{
  "schema": {
    "title": "Developer Site",
    "description": "Portal para profissionais de TI.",
    "type": "object",
    "definitions": {
      "socialmedia": {
        "type": "object",
        "title": "Rede social",
        "properties": {
          "id": {
            "type": "string",
            "title": "Rede social",
            "enum": [
              "bluesky",
              "facebook",
              "instagram",
              "linkedin",
              "mastodon",
              "website",
              "x",
              "youtube"
            ]
          },
          "title": {
            "type": "string",
            "title": "Nome amigável",
            "default": ""
          },
          "href": {
            "type": "string",
            "title": "URL",
            "description": "URL do perfil na rede social"
          }
        },
        "required": ["id", "href"]
      },
      "languages": {
        "type": "string",
        "title": "Language",
        "anyOf": [
          {
            "type": "string",
            "enum": ["pt-br"],
            "title": "Português (Brasil)"
          },
          {
            "type": "string",
            "enum": ["en"],
            "title": "English"
          },
          {
            "type": "string",
            "enum": ["es"],
            "title": "Español"
          }
        ]
      },
      "timezones": {
        "title": "Fuso horário",
        "type": "string",
        "description": "A configuração de fuso horário padrão do portal. Os usuários poderão definir seu próprio fuso horário, se os fusos horários disponíveis estiverem definidos nas configurações de data e hora.",
        "anyOf": [
          {
            "type": "string",
            "enum": [
              "UTC"
            ],
            "title": "UTC"
          },
          {
            "type": "string",
            "enum": [
              "America/Rio_Branco"
            ],
            "title": "Acre (America/Rio_Branco)"
          },
          {
            "type": "string",
            "enum": [
              "America/Noronha"
            ],
            "title": "Fernando de Noronha (America/Noronha)"
          },
          {
            "type": "string",
            "enum": [
              "America/Sao_Paulo"
            ],
            "title": "Brasília (America/Sao_Paulo)"
          },
          {
            "type": "string",
            "enum": [
              "America/Manaus"
            ],
            "title": "Manaus (America/Manaus)"
          }
        ]
      }
    },
    "required": [
      "site_id",
      "title"
    ],
    "properties": {
      "site_id": {
        "type": "string",
        "title": "Identificador da portal",
        "default": "Plone",
        "description": "Nome curto do portal. Deve ser único nessa instalação."
      },
      "title": {
        "type": "string",
        "title": "Título",
        "default": "Homepage",
        "description": "Um título curto para o site. Ele será mostrado como parte do título da janela do navegador em cada página."
      },
      "description": {
        "type": "string",
        "title": "Descrição do site",
        "default": "Meu site pessoal"
      },
      "site_logo": {
        "type": "string",
        "format": "data-url",
        "title": "Logo do Portal"
      },
      "available_languages": {
        "type": "array",
        "title": "Idiomas disponíveis",
        "description": "Idiomas que o portal deve oferecer aos usuários. O primeiro idioma da lista será o idioma padrão do portal.",
        "items": {"$ref": "#/definitions/languages"},
        "default": ["pt-br"]
      },
      "social_links": {
        "type": "array",
        "title": "Redes sociais",
        "description": "Links para redes sociais do portal.",
        "items": {"$ref": "#/definitions/socialmedia"},
        "default": []
      },
      "default_language": {
        "type": "string",
        "title": "Idioma padrão",
        "default": "pt-br"
      },
      "portal_timezone": {"$ref": "#/definitions/timezones"},
      "setup_content": {
        "type": "boolean",
        "title": "Conteúdo de exemplo (Demo)",
        "description": "Devemos adicionar conteúdo de exemplo durante a criação do site?",
        "default": false
      }
    }
  },
  "uischema": {
    "site_id": {"ui:widget": "hidden"},
    "available_languages": {"ui:widget": "hidden"},
    "default_language": {"ui:widget": "hidden"},
    "social_links": {
      "ui:enumNames": [
        "Bluesky",
        "Facebook",
        "Instagram",
        "LinkedIn",
        "Mastodon",
        "Website",
        "X (Twitter)",
        "YouTube"
      ]
    }
  }
}